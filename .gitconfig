[user]
    name = Michal Slepko
    email = michal.slepko@gmail.com
[push]
    default = simple
[alias]
    ct = commit -m
    dc = diff --cached
    st = status -s
    co = checkout
    br = branch
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[help]
    autocorrect = 1
[include]
    path = ~/.gitconfig.local
